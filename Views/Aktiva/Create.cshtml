    <form method="POST" action="/Aktiva/Details">
        <div class="form-group">
            <label for="KodeBarang">Kode Barang:</label>
            <input type="text" readonly="readonly" class="form-control" name="KodeBarang" >
        </div>
        <div class="form-group">
            <label for="KodeKategori">Kode Kategori:</label>
            <input type="text" readonly="readonly" class="form-control" name="KodeKategori">
